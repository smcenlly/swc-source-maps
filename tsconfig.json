{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": false,
    "outDir": "./out/typescript",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES6"],
    "isolatedModules": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "scripts",
    "lambda",
    "dist",
    "deps",
    "serverless.ts"
  ]
}